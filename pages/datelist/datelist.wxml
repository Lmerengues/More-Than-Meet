<!--index.wxml-->
<view class="container mycontainer">

  <view class="myview">
    <swiper indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class="myswiper">
      <block wx:for="{{imgUrls}}">
        <swiper-item>

          <view class="date-list row-flex">
            <view class="head-view">
              <image src="/images/head1.jpg" class="head-image" />
            </view>
            <view class="a-view">
                <text class="a1-view row-flex">周耕墨</text>
                <text class="a2-view row-flex">已成功联系</text>
            </view>
            <view class="b-view">
                <button class="b-btn">私信TA</button>
            </view>
          </view>

          <view class="date-list row-flex">
            <view class="head-view">
              <image src="/images/head3.jpg" class="head-image" />
            </view>
            <view class="a-view">
                <text class="a1-view row-flex">马正一</text>
                <text class="a2-view row-flex">待对方回复</text>
                <text class="a3-view row-flex">已等待：4小时37分</text>
            </view>
          </view>

          <view class="info-view">
            <view class="row-flex">
              <view class="name-view">
                刘亦菲
              </view>
              <view class="like-view">
                79人喜欢
              </view>
            </view>

            <view class="row-2">
              <view class="fee-view">
                <text class="gray-info">邀约费</text>
                <text class="fee-value">100元</text>
              </view>
            </view>

            <view class="row-flex">
              <view class="school-view">
                <text class="gray-info">中央美术学院</text>
              </view>
              <view class="major-view">
                <text class="gray-info">首饰设计</text>
              </view>
              <view class="grade-view">
                <text class="gray-info">大二</text>
              </view>
            </view>

            <view class="row-flex">
              <view class="xingzuo-view">
                <text class="gray-info">白羊座</text>
              </view>
              <view class="height-view">
                <text class="gray-info">165cm</text>
              </view>
            </view>

            <view class="row-flex">
              <view class="geqian-view">
                <text class="gray-info">资深吃货，热爱摄影，希望跟同行交流</text>
              </view>
            </view>

            <view class="row-flex">
              <view class="label-view">
                <view class="label">
                  <text class="gray-info label-info">随意</text>
                </view>
                <view class="label">
                  <text class="gray-info label-info">吃饭</text>
                </view>
                <view class="label">
                  <text class="gray-info label-info">看电影</text>
                </view>
                <view class="label">
                  <text class="gray-info label-info">下午茶</text>
                </view>
              </view>
            </view>

            <view class="row-flex">
              <view class="yue-view">
                <button class="yue-btn">约 TA</button>
              </view>
            </view>

          </view>
        </swiper-item>
      </block>
    </swiper>

  </view>
</view>
